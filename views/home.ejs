<!DOCTYPE html>
<html class="dark h-full">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Drive - Drive Lite</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <style>
    /* Dark scrollbar */
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-track { background: #0f172a; }
    ::-webkit-scrollbar-thumb { background: #334155; border-radius: 10px; }
    ::-webkit-scrollbar-thumb:hover { background: #475569; }
  </style>
</head>

<body class="h-full flex flex-col bg-slate-950 text-slate-200 font-sans antialiased">
  
  <header class="bg-slate-900/50 backdrop-blur-md border-b border-white/5 z-30 sticky top-0">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg bg-indigo-600 flex items-center justify-center text-white shadow-lg shadow-indigo-500/20">
            <i class="ri-cloud-fill"></i>
          </div>
          <h1 class="text-lg font-bold text-white tracking-wide">Drive Lite</h1>
        </div>

        <div class="relative">
          <button id="dropdownUserButton" data-dropdown-toggle="dropdownUser" class="flex items-center gap-3 px-2 py-1.5 rounded-full hover:bg-white/5 transition-colors border border-transparent hover:border-white/10">
            <div class="w-8 h-8 rounded-full bg-gradient-to-tr from-indigo-500 to-purple-600 flex items-center justify-center text-white text-xs font-bold">
              <%= user.charAt(0).toUpperCase() %>
            </div>
            <span class="hidden sm:block font-medium text-sm text-slate-300 pr-2"><%= user %></span>
            <i class="ri-arrow-down-s-line text-slate-500 text-lg mr-1"></i>
          </button>

          <div id="dropdownUser" class="z-50 hidden bg-slate-900 divide-y divide-slate-800 rounded-xl shadow-2xl w-48 border border-slate-800">
            <div class="px-4 py-3 text-sm text-slate-300">
              <div class="font-medium truncate"><%= user %></div>
            </div>
            <div class="py-1">
              <form action="/logout" method="post" class="w-full">
                <button type="submit" class="w-full text-left px-4 py-2.5 text-sm text-red-400 hover:bg-red-500/10 hover:text-red-300 transition-colors flex items-center gap-2">
                  <i class="ri-logout-box-line"></i> Sign out
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <main class="flex-1 flex flex-col max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-8 h-[calc(100vh-4rem)]">
    
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold text-white tracking-tight">My Files</h2>
        <button onclick="toggleUploadModal()" class="flex items-center gap-2 bg-indigo-600 hover:bg-indigo-500 text-white px-5 py-2.5 rounded-xl text-sm font-semibold shadow-lg shadow-indigo-900/20 transition-all hover:-translate-y-0.5">
            <i class="ri-add-line text-lg"></i>
            <span class="hidden sm:inline">Upload File</span>
        </button>
    </div>

    <div class="flex-1 overflow-y-auto pb-20 custom-scroll">
        <% if (files.length === 0) { %>
            <div class="h-64 flex flex-col items-center justify-center text-slate-500 border-2 border-dashed border-slate-800 rounded-3xl bg-slate-900/50">
                <div class="w-16 h-16 rounded-full bg-slate-800 flex items-center justify-center mb-4">
                    <i class="ri-folder-open-line text-3xl opacity-50"></i>
                </div>
                <p class="font-medium">No files uploaded yet</p>
                <p class="text-sm opacity-60 mt-1">Upload a file to get started</p>
            </div>
        <% } else { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                <% files.forEach((file) => { %>
                    <div class="group relative bg-slate-900 rounded-2xl p-4 border border-white/5 hover:border-indigo-500/30 transition-all duration-300 hover:shadow-xl hover:shadow-black/20 hover:-translate-y-1">
                        
                        <div class="flex justify-between items-start mb-4">
                            <div class="w-10 h-10 rounded-xl bg-slate-800 flex items-center justify-center text-indigo-400 text-xl group-hover:bg-indigo-500/10 group-hover:text-indigo-300 transition-colors">
                                <% if(file.mimetype && file.mimetype.includes('image')) { %>
                                    <i class="ri-image-line"></i>
                                <% } else if(file.mimetype && file.mimetype.includes('pdf')) { %>
                                    <i class="ri-file-pdf-line"></i>
                                <% } else if(file.mimetype && file.mimetype.includes('video')) { %>
                                    <i class="ri-film-line"></i>
                                <% } else { %>
                                    <i class="ri-file-text-line"></i>
                                <% } %>
                            </div>
                            
                            <button id="dropdown-btn-<%= file._id %>" data-dropdown-toggle="dropdown-<%= file._id %>" class="text-slate-500 hover:text-white p-1.5 rounded-lg hover:bg-slate-800 transition-colors">
                                <i class="ri-more-2-fill"></i>
                            </button>
                        </div>

                        <div class="mb-3">
                            <h3 class="font-medium text-slate-200 truncate pr-4 text-sm" title="<%= file.originalName %>">
                                <%= file.originalName %>
                            </h3>
                            <div class="flex items-center gap-2 mt-2 text-xs text-slate-500">
                                <span><%= (file.size / 1024).toFixed(1) %> KB</span>
                                <span class="w-1 h-1 rounded-full bg-slate-700"></span>
                                <span><%= new Date(file.uploadedAt).toLocaleDateString() %></span>
                            </div>
                        </div>

                        <div class="pt-3 border-t border-slate-800 flex justify-between items-center opacity-100 sm:opacity-0 sm:group-hover:opacity-100 transition-opacity duration-200">
                             <a href="<%= file.signedUrl %>" target="_blank" class="text-xs font-medium text-indigo-400 hover:text-indigo-300 hover:underline">View File</a>
                             <button onclick="downloadFile('<%= file.signedUrl %>', '<%= file.originalName %>')" class="p-1.5 text-slate-500 hover:text-white transition-colors" title="Download">
                                <i class="ri-download-cloud-line text-lg"></i>
                             </button>
                        </div>

                        <div id="dropdown-<%= file._id %>" class="z-50 hidden bg-slate-800 divide-y divide-slate-700 rounded-xl shadow-xl w-44 border border-slate-700">
                            <ul class="py-2 text-sm text-slate-300">
                                <li>
                                    <a href="#" onclick="copyLink('<%= file.signedUrl %>'); return false;" class="flex items-center px-4 py-2 hover:bg-slate-700 hover:text-white">
                                        <i class="ri-link-m mr-2 text-slate-500"></i> Copy Link
                                    </a>
                                </li>
                                <li>
                                    <a href="#" onclick="downloadFile('<%= file.signedUrl %>', '<%= file.originalName %>'); return false;" class="flex items-center px-4 py-2 hover:bg-slate-700 hover:text-white">
                                        <i class="ri-download-line mr-2 text-slate-500"></i> Download
                                    </a>
                                </li>
                            </ul>
                            <div class="py-2">
                                <form action="/delete/<%= file._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this file?');">
                                    <button type="submit" class="w-full text-left flex items-center px-4 py-2 text-sm text-red-400 hover:bg-slate-700 hover:text-red-300">
                                        <i class="ri-delete-bin-line mr-2"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

  </main>

  <div id="uploadModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-slate-950/80 backdrop-blur-sm transition-opacity" onclick="toggleUploadModal()"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
      <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative transform overflow-hidden rounded-2xl bg-slate-900 border border-slate-800 text-left shadow-2xl transition-all w-full max-w-lg">
            
            <div class="flex justify-between items-center p-5 border-b border-slate-800">
                <h3 class="text-lg font-semibold text-white">Upload Files</h3>
                <button onclick="toggleUploadModal()" class="text-slate-500 hover:text-white transition-colors">
                    <i class="ri-close-line text-2xl"></i>
                </button>
            </div>

            <form action="/upload" method="post" enctype="multipart/form-data" class="p-6">
                <div class="flex items-center justify-center w-full">
                    <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 border-2 border-slate-700 border-dashed rounded-xl cursor-pointer bg-slate-800/50 hover:bg-slate-800 hover:border-indigo-500 hover:text-indigo-400 transition-all group">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <i class="ri-cloud-upload-line text-4xl text-slate-500 mb-4 group-hover:text-indigo-500 transition-colors"></i>
                            <p class="mb-2 text-sm text-slate-400"><span class="font-semibold text-indigo-400">Click to upload</span> or drag and drop</p>
                            <p class="text-xs text-slate-500">SVG, PNG, JPG or GIF</p>
                        </div>
                        <input id="dropzone-file" type="file" class="hidden" name="file" onchange="this.form.submit()" />
                    </label>
                </div>
                <div class="mt-6 flex justify-end gap-3">
                    <button type="button" onclick="toggleUploadModal()" class="px-4 py-2 text-sm font-medium text-slate-300 bg-slate-800 border border-slate-700 rounded-lg hover:bg-slate-700 hover:text-white transition-colors">Cancel</button>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  <script>
    function toggleUploadModal() {
        const modal = document.getElementById('uploadModal');
        modal.classList.toggle('hidden');
    }

    async function downloadFile(url, filename) {
        try {
            const response = await fetch(url);
            const blob = await response.blob();
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = filename;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        } catch (err) {
            alert("Download failed!");
            console.error(err);
        }
    }

    function copyLink(url) {
        navigator.clipboard.writeText(url)
            .then(() => alert("Link copied to clipboard!"))
            .catch((err) => console.error("Failed to copy:", err));
    }
  </script>
</body>
</html>